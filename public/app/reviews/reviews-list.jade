.container
    .row
        .col-md-4
            span
                span Search:
                input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-4 Sort:
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="title") Title
                option(value="published") Publicsed
    br
    table.table
        tr
            th Title
            th Published
        tr(ng-repeat="review in reviews | filter: search | orderBy: sort")
            td
                a(href="#/reviews/{{ review._id }}") {{ review.title }}
            td some data